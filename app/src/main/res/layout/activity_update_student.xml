<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/update_student_circle_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/baseline_person_24"
        android:layout_gravity="center"
        app:civ_border_color="@color/primary"
        app:civ_border_width="2dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update student"
        android:textSize="32sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/update_student_name_edit_text"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:hint="Name"
        android:padding="10dp"
        android:background="@drawable/outline_edit_text" />

    <EditText
        android:id="@+id/update_student_age_edit_text"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:maxLines="1"
        android:padding="10dp"
        android:background="@drawable/outline_edit_text" />

    <Button
        android:id="@+id/update_student_update_button"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update" />

</LinearLayout>